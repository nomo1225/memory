<div class="text-center">
  <h1>思い出一覧</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col" style="width:20%">日付</th>
      <th scope="col" style="width:20%">タイトル</th>
      <th scope="col" style="width:60%">内容</th>
    </tr>
  </thead>
  <% @memories.each do |memory| %>
    <tbody>
      <tr>
        <td><%= memory.date %></td>
        <td><%= link_to memory.title, memory_path(memory) %></td>
        <td><%= memory.content.truncate(15, omission: '…') %></td>
      </tr>
    </tbody>
  <% end %>
</table>