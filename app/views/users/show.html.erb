<div class="row">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title"><%= @user.name1 %>さん & <%= @user.name2 %>さんのページ</h3>
      <div class="card-body">
        <%= image_tag @user.image.url %>
        <p>思い出の場所：<%= @user.memories_place %></p>
        <% if @user.anniversary_day %>
          <p>思い出の日から<%= @year_spend %>年 <%= @month %>ヶ月</p>
        <% end %>
        <%= link_to '情報を編集する', edit_user_path, class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
    
    <div class="register_memories">
      <%= link_to '思い出一覧', memories_path, class: 'btn btn-lg btn-primary' %>
      <%= link_to '思い出を登録する', new_memory_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
</div>